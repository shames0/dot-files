[advice]
    detachedHead = false

[alias]
    lg = "log \
            --graph \
            --abbrev-commit \
            --date=iso \
            --format=format:'%C(bold blue)%h%C(reset) - %C(green)(%ad)%C(reset) %C(white)%s%C(reset) %C(bold white)â€” %an%C(reset)%C(bold yellow)%d%C(reset)'"

[color]
    ui = true

[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22

[color "diff"]
    meta = 11
    frag = magenta bold
    func = 146 bold
    commit = yellow bold
    old = red bold
    new = green bold
    whitespace = red reverse

[core]
    editor = vim
    pager = diff-so-fancy | less --tabs=4 -RFX
    excludesFile = ~/.gitignore

[diff-so-fancy]
    markEmptyLines = true
    useUnicodeRuler = false
    rulerWidth = 47

[init]
    defaultBranch = master

[interactive]
    diffFilter = diff-so-fancy --patch
